<h1 class="text-6xl ..."><%= current_user.nick_name%>の取引中の動物一覧</h1>

<% if @all_animals.blank?%>
  <p>取引中の動物はありません</p>
<% end %>

<% @all_animals.each do |all_animal|%>
  <tr>
    <td>
      <%= link_to animal_path(all_animal) do %>
        <%= image_tag url_for(all_animal.images.first), size: "200x200" %>
      <% end %>
    </td>
  </tr>
<% end %>

<%= link_to "戻る", user_path(current_user), class: "py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border-2 border-gray-900 font-semibold text-gray-800 hover:text-white hover:bg-gray-800 hover:border-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-800 focus:ring-offset-2 transition-all text-sm dark:hover:bg-gray-900 dark:border-gray-900 dark:hover:border-gray-900 dark:text-white dark:focus:ring-gray-900 dark:focus:ring-offset-gray-800"%>